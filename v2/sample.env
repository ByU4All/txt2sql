# Database Configuration
DATABASE_URI=postgresql://username:password@localhost:5432/your_database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database
DB_USER=username
DB_PASSWORD=password

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ChromaDB Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8000

# LLM API Keys (at least one required)
# For ollama, specify the model name instead of an API key and replace the base URL if needed
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE_URL=https://api.openai.com/v1
OLLAMA_MODEL=llama2
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Application Settings
ENVIRONMENT=development
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Vector Retrieval Settings
VECTOR_TOP_K=10
SIMILARITY_THRESHOLD=0.7

# Graph Retrieval Settings
MAX_JOIN_DEPTH=3
MAX_TABLES_PER_QUERY=5

# Context Building
MAX_CONTEXT_LENGTH=8000
INCLUDE_SAMPLE_ROWS=true
MAX_SAMPLE_ROWS=3

# SQL Execution Settings
QUERY_TIMEOUT=30
MAX_RESULT_ROWS=1000
READ_ONLY_MODE=true
MAX_REFINEMENT_ATTEMPTS=3
